{% if maxPages > 1 %}
<div class="container">
    <div class="row justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item{{ thisPage == 1 ? ' disabled' }}">
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), {page: thisPage - 1 < 1 ? 1 : thisPage - 1}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>

                {# Render each page number #}
                {% for i in 1..maxPages %}
                    <li class="page-item{{ thisPage == i ? ' active' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), {page: i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                <li class="page-item{{ thisPage == maxPages ? ' disabled' }}">
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}"  aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
{% endif %}